/* src/pages/detail/detail.wxss */

page {
  min-height: 100%;
  background-color: #F3F3F3;
}

.m-detail {
  padding: 40rpx 24rpx 100rpx;
}

.m-detail .listview {
  margin-bottom: 44rpx;
}

.m-detail .listview .item {
  margin-top: 40rpx;
}

.m-detail .listview .item:first-child {
  margin-top: 0px;
}

.m-detail .listview .box {
  position: relative;
  overflow: hidden;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  background-color: #fff;
}

.m-detail .listview .head {
  position: relative;
  height: 80rpx;
  padding-left: 24rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  border-bottom: 1rpx dashed #ddd;
}

.m-detail .listview .deletebtn {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 0px;
  right: 0px;
}

.m-detail .listview .deletebtn image {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 50%;
  left: 50%;
  margin-left: -16rpx;
  margin-top: -16rpx;
}

.m-detail .listview .content {
  padding: 20rpx 24rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 44rpx;
}

.m-detail .listview .lock {
  position: absolute;
  left: 0px;
  right: 0px;
  top: 82rpx;
  bottom: 0px;
  background-color: rgba(255, 255, 255, 0.75);
}

.m-detail .listview .lock image {
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  left: 50%;
  top: 50%;
  margin-left: -32rpx;
  margin-top: -32rpx;
}

.m-detail .addview {
  position: relative;
  height: 88rpx;
  background-color: #fff;
}

.m-detail .addview image {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 50%;
  top: 50%;
  margin-left: -20rpx;
  margin-top: -20rpx;
}